.UCenter-bg {
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center; /** 主方向：居中 */
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  /* align-items: center;  辅方向：居中 */
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  background-image: url('http://www.mokeylife.cn/MyHomePage/picture/myBg.png');
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

/** 顶部图片中info */

.my-info {
  display: flex;
  flex-direction: row;
}

.my-avatar {
  padding: 25rpx;
  border-radius: 50%;
  animation: avatar 3s;
  animation-direction: alternate;
  animation-iteration-count: infinite;
}

.my-text {
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  justify-content: center; /** 弹性布局很好的解决各种居中问题 */
}

/** 动画 */
@keyframes avatar{
  from{
    box-shadow: 0 0 0px #1cbbb300;
  }
  to{
     box-shadow: 0 0 25px #1cbbb4;
  }
}